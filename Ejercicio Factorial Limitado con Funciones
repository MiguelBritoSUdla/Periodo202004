#include <stdio.h>

int factorial(int);
int main()
{
    
    int limite=0;
    printf("Ingrese el nÃºmero cuyo factorial quiere obtener: ");
    scanf("%i",&limite);
    printf("Factorial: %i",factorial(limite));
    
}

int factorial (int num)
{
    int cont=1,fact=1;
    while (num>=cont)
    {
        fact=fact*cont;
        cont++;
    }
    return fact;
}

