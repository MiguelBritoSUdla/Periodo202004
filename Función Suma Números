#include <stdio.h>
float suma (float,float);
void main()
{
    float numero1,numero2;
    printf("Ingrese el primer número: ");
    scanf("%f",&numero1);
    while (numero1<0)
    {
        printf("Ingrese un número válido: ");
        scanf("%f",&numero1);
    }
    printf("Ingrese el segundo número: ");
    scanf("%f",&numero2);
    while (numero2<0)
    {
        printf("Ingrese un número válido: ");
        scanf("%f",&numero2);
    }
    printf("La suma es %.2f",suma(numero1,numero2));
}

float suma(float x,float y)
{
    float resultado=0;
    resultado=x+y;
    return resultado;
}

